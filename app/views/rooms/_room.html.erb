<div class="card card-compact w-96 bg-base-100 shadow-xl">
  <figure><%= image_tag room.room_image_url, class: 'card-img-top', size: '300x200' %></figure>
  <div class="card-body">
    <h2 class="card-title"><%= room.name %></h2>
    <h2 class="card-title"><%= "最大#{room.entry_limit}人" %></h2>
    <div class="card-actions justify-end">
      <button class="btn btn-primary"><%= link_to "部屋に入る", room_path(room) %></button>
    </div>
  </div>
</div>
