<div class="drawer sticky top-0 z-50">
  <input id="my-drawer-3" type="checkbox" class="drawer-toggle" /> 
  <div class="drawer-content flex flex-col">
    <!-- Navbar -->
    <div class="w-full navbar bg-black text-gray-300">
      <div class="flex-none lg:hidden">
        <label for="my-drawer-3" aria-label="open sidebar" class="btn btn-square btn-ghost">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-6 h-6 stroke-current"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
        </label>
      </div> 
      <div class="flex-1 px-2 mx-2"><%= link_to "おしゃべりインコ", root_path %></div>
      <div class="flex-none hidden lg:block">
        <ul class="menu menu-horizontal">
          <!-- Navbar menu content here -->
          <li><%= link_to "交流スペース（工事中）" %></li>
          <li><%= link_to "インコをお迎えする", birds_path %></li>
          <% if user_signed_in? %>
            <li><%= link_to "MYインコ", mypage_path, data: { turbo: false } %></li>
            <li>
              <div class="dropdown dropdown-end">
                <i tabindex="0" role="button" class="fas fa-user-circle fa-xl text-blue-500"></i>
                <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52 mt-32 bg-gray-800">
                  <li><%= link_to "プロフィール", profile_path, class: "text-gray-200" %></li>
                  <li>
                    <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "text-gray-200" unless current_user.guest? %>
                    <%= link_to "ログアウト", guest_logout_path, data: { turbo_method: :delete }, class: "text-gray-200" if current_user.guest? %>
                  </li>
                </ul>
              </div>
            </li>
          <% else %>
            <li>
              <div class="dropdown dropdown-end">
                <i tabindex="0" role="button" class="fas fa-user-circle fa-xl text-blue-500"></i>
                <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52 mt-32 bg-gray-800">
                  <li><%= link_to "新規登録", new_user_registration_path, class: "text-gray-200" %></li>
                  <li><%= link_to "ログイン", new_user_session_path, class: "text-gray-200" %></li>
                </ul>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div> 
  <div class="drawer-side">
    <label for="my-drawer-3" aria-label="close sidebar" class="drawer-overlay"></label> 
    <ul class="menu p-4 w-80 min-h-full bg-black text-gray-200">
      <!-- Sidebar content here -->
      <li><%= link_to "交流スペース", rooms_path %></li>
      <li><%= link_to "インコをお迎えする", birds_path %></li>
      <% if user_signed_in? %>
        <li><%= link_to "MYインコ", mypage_path %></li>
        <li><%= link_to "プロフィール", profile_path %></li>
        <li>
          <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "text-gray-200" unless current_user.guest? %>
          <%= link_to "ログアウト", guest_logout_path, data: { turbo_method: :delete }, class: "text-gray-200" if current_user.guest? %>
        </li>
      <% else %>
        <li><%= link_to "新規登録", new_user_registration_path %></li>
        <li><%= link_to "ログイン", new_user_session_path %></li>
      <% end %>
    </ul>
  </div>
</div>
